<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- 设置activity切换动画 -->  

    </style>

    <style name="AlertDialogCustom" parent="@android:style/Animation.Dialog">
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">10sp</item>
    </style>


    <!-- 自定义Dialog风格 -->
    <style name="Theme_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="pop_anim">
        <item name="android:windowEnterAnimation">@anim/pop_anim_in</item>
        <item name="android:windowExitAnimation">@anim/pop_anim_out</item>
    </style>

    <style name="pop_anim2">
        <item name="android:windowEnterAnimation">@anim/pop_anim_in</item>
        <item name="android:windowExitAnimation">@anim/pop_anim_dismiss</item>
    </style>

     <style name="CustomDialog" parent="@android:style/Theme.Dialog">
		<item name="android:windowFrame">@null</item>
    	<item name="android:windowIsFloating">true</item>
    	<item name="android:windowContentOverlay">@null</item>
    	<item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    	<item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
	</style>
	
	<style name="CustomProgressDialog" parent="@style/CustomDialog">
		<item name="android:windowBackground">@android:color/transparent</item>
    	<item name="android:windowNoTitle">true</item>
	</style>
    
</resources>